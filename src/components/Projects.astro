---

import CodeIcon from '../Icons/CodeIcon.astro';
import FastApi from '../Icons/FastApi.astro';
import {projects, TAGS} from '../translations/es.astro';



---
{projects.map(({ title, description, url, github, image, tags }) => (
    <article class="flex flex-col space-y-6 group md:flex-row md:space-x-6 md:space-y-0 my-4 py-4">
        <div class="w-full md:w-1/2">
            <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-6 transition duration-500 ease-in-out transform shadow-xl overflow-hidden rounded-xl sm:rounded-xl md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700">
                <img src={image} alt={`Captura de pantalla del Proyecto ${title}`} class="relative h-full overflow-hidden rounded-xl transition-transform duration-300 hover:scale-[1.12]" />
            </div>
        </div>
        <div class="flex flex-col w-full md:w-1/2 " >
            <h3 class="text-2xl font-bold text-black/80 dark:text-yellow-200/90">{title}</h3>
            <div class="mt-2 text-gray-700 dark:text-gray-400 text-pretty">{description}</div>
            <ul class='flex flex-wrap gap-2 mt-4 justify-center'>
                {tags.map((tag) => (
                    <li> 
                        <span class={`flex pr-4 gap-x-1 bg-gray-800 rounded-full text-xs ${tag.class} items-center py-0 px-2`}>
                            <tag.icon class="ml-0 size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <div class="flex justify-center gap-4 py-5">
        <a 
          href={url}
          class="flex items-center justify-center gap-2 px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-800 dark:bg-gray-800 dark:hover:bg-gray-700 text-gray-800 hover:text-white dark:text-white transition-colors duration-300 border border-gray-300 dark:border-gray-600 w-32"
        >
          <svg class="size-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 5v6m0-6l-6 6m6-6v-6" />
          </svg>
          Preview
        </a>
        <a 
          href={github}
          class="flex items-center justify-center gap-2 px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-800 dark:bg-gray-800 dark:hover:bg-gray-700 text-gray-800 hover:text-white dark:text-white transition-colors duration-300 border border-gray-300 dark:border-gray-600 w-32"
        >
          <CodeIcon class="size-4" />
          Code
        </a>
      </div>
        </div>
    </article>
))}
