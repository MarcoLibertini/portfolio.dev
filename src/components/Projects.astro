---
import { Image } from 'astro:assets'
import CodeIcon from '../Icons/CodeIcon.astro';
import FastApi from '../Icons/FastApi.astro';
import {projects, TAGS} from '../translations/es.astro';



---
{projects.map(({ title, description, url, github, image, tags }) => (
    <article class="flex flex-col space-y-4 group md:flex-row md:space-x-6 md:space-y-0 my-3 py-3">
        <div class="w-full md:w-2/5">
            <div class="relative flex flex-col items-center gap-4 transition duration-500 ease-in-out transform shadow-xl overflow-hidden rounded-xl sm:rounded-xl md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700">
                <Image 
                    src={image} 
                    alt={`Captura de pantalla del Proyecto ${title}`}
                    class="relative w-full h-48 object-cover overflow-hidden rounded-xl transition-transform duration-300 hover:scale-[1.12]"
                    width={600}
                    height={300}
                    quality="mid"
                />
            </div>
        </div>
        <div class="flex flex-col w-full md:w-3/5 space-y-3">
            <h3 class="text-xl font-bold text-black/80 dark:text-yellow-200/90">{title}</h3>
            <div class="text-sm text-gray-700 dark:text-gray-400 text-pretty">{description}</div>
            <ul class='flex flex-wrap gap-2 justify-start'>
                {tags.map((tag) => (
                    <li> 
                        <span class={`flex pr-3 gap-x-1 bg-gray-800 rounded-full text-xs ${tag.class} items-center py-0 px-2`}>
                            <tag.icon class="ml-0 size-3" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <div class="flex gap-3 pt-2">
                {url && (
                    <a 
                        href={url}
                        class="flex items-center justify-center gap-2 px-3 py-1.5 rounded-lg bg-gray-100 hover:bg-gray-800 dark:bg-gray-800 dark:hover:bg-gray-700 text-gray-800 hover:text-white dark:text-white transition-colors duration-300 border border-gray-300 dark:border-gray-600 w-28 text-sm"
                    >
                        <svg class="size-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 5v6m0-6l-6 6m6-6v-6" />
                        </svg>
                        Preview
                    </a>
                )}
                <a 
                    href={github}
                    class="flex items-center justify-center gap-2 px-3 py-1.5 rounded-lg bg-gray-100 hover:bg-gray-800 dark:bg-gray-800 dark:hover:bg-gray-700 text-gray-800 hover:text-white dark:text-white transition-colors duration-300 border border-gray-300 dark:border-gray-600 w-28 text-sm"
                >
                    <CodeIcon class="size-3" />
                    Code
                </a>
            </div>
        </div>
    </article>
))}
    